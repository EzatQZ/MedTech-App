<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/admin_logo"
        android:layout_width="164dp"
        android:layout_height="268dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/gear"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/medicine_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/admin_logo"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:text="Medicine"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:padding="16dp"/>

    <Button
        android:id="@+id/pharmacy_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/medicine_button"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:text="Pharmacy"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:padding="16dp"/>

    <Button
        android:id="@+id/users_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/pharmacy_button"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:text="Users"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:padding="16dp"/>
    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/rounded_button"
        android:padding="16dp"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="12sp" />




</RelativeLayout>
