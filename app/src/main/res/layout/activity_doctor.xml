<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/doctor_logo"
        android:layout_width="164dp"
        android:layout_height="268dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/doctor"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/prescription_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/doctor_logo"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:text="Prescriptions"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:padding="16dp" />

    <Button
        android:id="@+id/patient_inquiries_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/prescription_button"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:text="Patient Inquiries"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:padding="16dp" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/patient_inquiries_button"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:text="Settings"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:padding="16dp" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/rounded_button"
        android:padding="16dp"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>
